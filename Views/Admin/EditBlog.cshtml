@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Admin - Add blog";
}


<h1>Update Blog</h1>

<div class="login-bg">
    <div class="login-page">
        <div class="row">
            <div class="col-md-6 login-zone">
                    <div class="controls">
                        <input id="title" type="text" placeholder="Title" class="blog-control" required />
                        <br />
                        <textarea id="content" class="content"  rows="10" cols="50" placeholder="Enter Your Content" class="blog-control"></textarea>
                        
                    </div>
                    <div class="btn-login">
                        <button id="btnSubmit" onclick=UpdateBlog() class="button-control blog-btn-primary">Update</button>
                    </div>
            </div>
        </div>
    </div>
</div>

<style>
    .logo img {
        height: 65px;
    }

    .logo {
        padding-bottom: 30px;
    }

    .login-page {
        width: 40%;
        margin: 0 auto;
        margin-top: 75px;
        background: #fff;
    }

    .login-title {
        font-size: 25px;
        FONT-WEIGHT: 500;
        margin-top: 20px;
        margin-bottom: 20px;
        padding-top: 20px;
        padding-bottom: 20px;
    }

    .btn-login {
        margin-top: 35px;
    }

    .login-bg {
        width: 100%;
        overflow: hidden;
        background: #aaaaaa24;
        height: 100vh;
    }

    .login-zone {
        padding: 35px;
        padding-top: 44px;
        padding-left: 45px;
    }

    .forgotpassword {
        text-align: right;
        margin-top: 20px;
        font-size: 11px;
        color: red;
    }

    .blog-control {
        border-color: #C1C1C1;
        border-width: 1px;
        padding: 6px;
        margin-top: 15px;
        margin-bottom: 15px;
        width: 97%;
        border: none;
        border-bottom: 1px solid grey;
        padding-bottom: 10px;
    }

    .blog-btn-primary {
        background: #D52727;
        color: #fff;
        border-radius: 5px;
        border: none;
        width: 140px;
        font-size: 20px;
        padding: 11px;
